<!DOCTYPE html>
<html>
  <head>
    <title>Personal Portfolio</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css" media="screen" title="no title">
    <link rel="stylesheet" href="/stylesheets/styles.css" media="screen" title="no title">
    <link href="https://fonts.googleapis.com/css?family=Audiowide" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Jura" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Marcellus+SC" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Cinzel+Decorative" rel="stylesheet">
  </head>

  <body>
    <div class="container toppage">
       <nav class="navbar navbar-fixed-top">
       <div class="container-fluid">
         <div class="navbar-header">
           <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
             <span class="sr-only">Toggle navigation</span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
           </button>
           <a class="navbar-brand icon gstyle" href="/">Home</a>
         </div>
         <div id="navbar" class="navbar-collapse collapse">
           <ul class="nav navbar-nav navbar-right">
             <%if !user_signed_in?%>
              <p class="navbar-brand log gstyle"><%= link_to "Admin", new_user_session_path%></p>
             <%end%>
             <%if user_signed_in?%>
              <p class="navbar-brand log gstylefont-family: 'Marcellus SC', serif;"><%= link_to "Logout", destroy_user_session_path, :method => :delete%></p>
             <%end%>
           </ul>
         </div>
       </div>
     </nav>
     </div>
    <%= yield %>
    <script type="text/javascript" src="/javascripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="/javascripts/jquery.js"></script>


  </body>
</html>
