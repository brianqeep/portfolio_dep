<h1 class="head-title gstyle1 text-center">New Comment on the project</h1>
<hr>
<div class="form-new-lang">
  <%= form_for [@language, @comment] do |f| %>
      <%= f.label :comment %>
      <%= f.text_field :comment %>

      <%= f.label :name %>
      <%= f.text_field :name %>
      <p><%= f.submit %></p>
    <% end %>

</div>
